<div id="con">
	
<div class="container-fluid p-3 bg-dark text-white head">
	<h1 align="center">My Test Application</h1>
	<%= link_to("<Home>",:controller=>'access',:action=>'menu')%><%= link_to("<download as csv>",manageplayers_sort_by_all_three_path(format: "csv"))%>
		<div class="container admin_color" align="right">Logged in as :<%=session[:username]%>  </div>
</div>
<div>
<%= form_tag(manageplayers_search_path,:method=>'get') do %>
		<div class="input-group">  
    	<%= search_field_tag :search  %>  
    	<div class='btn btn-info glyphicon glyphicon-search'>  
     
		<%= submit_tag("Search") %>
		</div>
		</div>		
<% end %>
</div>
<div >
	<table class="table table-hover">
		<thead class="tb_header">
		  <tr>
		  		<th>Player</th>
		  		<th>Team</th>
		  		<th>Pos</th>
		  		<th>Attempt/Game</th>
		  		<th>Attempts</th>
		  		<th>Yards</th>
		  		<th>Average</th>
		  		<th>Yards/Game</th>
		  		<th>Total Rushing Touchdowns</th>
		  		<th>Longest Rush</th>
		  		<th>Rushing First Downs</th>
		  		<th>Rushing First Downs %</th>
		  		<th>Rushing 20+ Yards Each</th>
		  		<th>Rushing 40+ Yards Each</th>
		  		<th>Rushing Fumbles</th>
		  		<th> </th>
		  </tr>	
		</thead>
		  <% @player.each do |player|%>
		  	<%= render(:partial=>'list_players',:locals=>{:player=>player})%>
		  <%end%>
		</table>
		
</div>
<%= will_paginate @player%>
